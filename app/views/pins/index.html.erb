<div id="pins", class="transitions-enabled", style="margin-top: 7em;">

  <% @pins.reverse.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:medium) if pin.image.url != "/images/original/missing.png" %>
      <div class="panel-body">
	<!-- <%= pin.user.email[/^\w+/] if pin.user %> says: -->
	<%= pin.description %>
	<div>
	  <%= link_to 'Show', pin %>
	  <% if pin.user == current_user %>
	    <%= link_to 'Edit', edit_pin_path(pin) %>
	    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	  <% end %>
	</div>
      </div>
    </div>
  <% end %>
</div>

<div class="panel-footer">

  <div class="container">
    <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

