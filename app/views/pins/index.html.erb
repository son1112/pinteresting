<div class="panel panel-default">
  <div class="panel-heading">

    <h1 class="center">Pins</h1>

    <div class="container">
      <% if user_signed_in? %>
	<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>

  <div class="panel-body">
    <table>
      <thead>
	<tr>
	  <th></th>
	  <th></th>
	  <th></th>
	  <th></th>
	</tr>
      </thead>

      <tbody>
	<% @pins.reverse.each do |pin| %>
	  <tr>
	    <td><%= image_tag pin.image.url(:thumb) if pin.image.url != "/images/original/missing.png" %></td>
            <td><div class="shout-curs"><%= pin.user.email[/^\w+/] if pin.user %> says:</div></td>
            <td><div class="shout", style="word-wrap: break-word; width: 400px"><%= pin.description %></div></td>
	    <td><%= link_to 'Show', pin, class: "btn btn-primary" %></td>
	    <% if pin.user == current_user %>
	      <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary" %></td>
	      <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
	    <% end %>
	  </tr>
	<% end %>
      </tbody>
    </table>
  </div>

  <br>

  <div class="panel-footer">

    <div class="container">
      <% if user_signed_in? %>
	<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>
</div>

