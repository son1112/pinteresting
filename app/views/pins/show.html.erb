
<div style="margin-top: 10em;">

  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
	<div class="panel-heading center">
	  <%= image_tag @pin.image.url(:medium) if @pin.image.url != "/images/original/missing.png" %>
	</div>
	<div class="panel-body">
	  <p>
	    <strong><%= @pin.user.email[/^\w+/] if @pin.user %></strong>
	  </p>

	  <p>
	    <%= @pin.description %>
	  </p>

	  <% if @pin.user == current_user %>
	    <%= link_to edit_pin_path(@pin), class: "btn btn-primary" do %>
	      <span class="glyphicon glyphicon-arrow-right"></span> Edit 
	    <% end %>

	    <%= link_to @pin, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } do %>
	      <span class="glyphicon glyphicon-remove-circle"></span> Delete
	    <% end %>
	  <% end %>

	  <div style="float: right">
	    <% if user_signed_in? %>
	      <%= link_to new_pin_path, class: "btn btn-primary" do %> 
		<span class="glyphicon glyphicon-plus-sign"></span> New Pin
	      <% end %>
	    <% end %>

	    <%= link_to pins_path, class: "btn btn-primary" do %>
	      <span class="glyphicon glyphicon-th"></span> Pins 
	    <% end %>
	  </div>

	</div>
      </div>
    </div>
  </div>
</div>
