<div class="panel panel-default">
  <div class="panel-heading">
    <div class="center">
      <%= image_tag @pin.image.url(:medium) %>
    </div>
    <br/>
  </div>

  <div class="shout container center">
    <%= @pin.description %>
  </div>

  <div class="panel-footer">
    <% if @pin.user == current_user %>
      <%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Pins', pins_path, class: "btn btn-primary" %>
    <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>


</div>

